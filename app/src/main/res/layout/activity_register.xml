<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context=".Register">


    <EditText
        android:id="@+id/editTextTextR2"
        android:layout_width="292dp"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/emailicon"
        android:drawablePadding="10dp"
        android:drawableTint="#000000"
        android:ems="10"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextR3"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/editTextTextR3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.301" />

    <EditText
        android:id="@+id/editTextTextR1"
        android:layout_width="292dp"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/usericon"
        android:drawablePadding="10dp"
        android:drawableTint="#000000"
        android:ems="10"
        android:hint="Create User Name"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextR2"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/editTextTextR2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.168" />

    <EditText
        android:id="@+id/editTextTextR4"
        android:layout_width="292dp"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/securityicon"
        android:drawablePadding="10dp"
        android:drawableTint="#000000"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.564" />

    <EditText
        android:id="@+id/editTextTextR3"
        android:layout_width="292dp"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/securityicon"
        android:drawablePadding="10dp"
        android:drawableTint="#000000"
        android:ems="10"
        android:hint="Create Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextR4"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="@+id/editTextTextR4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.429" />

    <TextView
        android:id="@+id/textViewR22"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:text="Already Have  An Account?"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.915" />

    <Button
        android:id="@+id/buttonR1"
        android:layout_width="257dp"
        android:layout_height="54dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="42dp"
        android:backgroundTint="#F18BAD"
        android:text="Register"
        android:textColor="#16192E"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewR22"
        app:layout_constraintEnd_toEndOf="@+id/textViewR22"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="@+id/textViewR22"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextR4"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textViewR1"
        android:layout_width="205dp"
        android:layout_height="44dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="sans-serif"
        android:text="Registration"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextR1"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextR1"
        app:layout_constraintStart_toStartOf="@+id/editTextTextR1"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>